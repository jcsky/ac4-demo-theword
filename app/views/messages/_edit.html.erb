<div class="message-new mge-show clearfix mge-edit-form", id="edit-mge-<%= message.id %>">
  <legend>修改遺言</legend>
  <%= form_for message, :url => message_path(message) do |m| %>
    <%= m.select :contact_ids, current_user.contacts.all.map{ |c| [c.name, c.id] }, {}, :multiple => true, :class=> "receivers-select col-md-9 receivers-s2" %>
    <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#myModal"> + </button>
    <%= m.text_area :content, :class=> "form-control message-input-area", :rows => 5, :value=> message.content %>
    <div class="form-group">
      上傳檔案：
      <%= m.file_field :image, class: 'inline-block' %>
      <%= check_box_tag "destroy_photo", "1" %> 刪除檔案
    </div>
    指定傳送日期：
    <%#= m.text_field :delivery_date, :class => "datepicker" %>
    <div class='input-group date'>
      <%= m.text_field :delivery_date, :class => 'form-control datepicker',default: DateTime.current, id:"datetimepicker1"%>
      <span class="input-group-addon look-outline-red">
          <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
    <div class="pull-right">
      <%= link_to "草稿", messages_path, :class => 'btn btn-primary', :status => "draft" %>
      <%= m.submit "完成", :class => 'btn btn-primary', :status => "OK" %>
    </div>
  <% end %>
</div>

<script>
  $(function () {
      $('#datetimepicker1').datetimepicker({
        format: 'YYYY-MM-DD hh:mm a'
      });
  });

  $('.datepicker').datepicker({
     format: "yyyy/mm/dd"
  });

  $(".receivers-select").select2();
</script>