<div class="container">

  <div class="col-md-3 todolist">
    <!-- <h2>To Do List</h2> -->
    <!-- <textarea name="todolist">todolist</textarea> -->
  </div>

  <div class="col-md-6">
    <div class="mge-txt-area">
      <%= form_for @message, :url => messages_path do |m| %>
        <h2><%= m.label :content, 'Leave Your Message' %></h2>
        <!-- 寬度不應該寫死 -->
        <%= m.text_area :content, size: '74x8' %>
        <%= m.submit "submit", :class => 'btn btn-primary' %>
      <% end %>
    </div>
    <div class="mge">
      <% @messages.each do |message| %>
        <%= message.content %>
        <div class="edit-delete-mge pull-right">
          <%= link_to 'Edit', edit_message_url(message) %>
          <%#= link_to 'X', message_path(message), :data =>{:confirm => "r u sure?"}, :method => :delete %>
          <%= link_to 'X', message_path(message), :method => :delete %>
        </div>
      <br>
      <div>
        Receiver:
      </div>
      <% end %>
    </div>
  </div>

  <div class="col-md-3 contact-list">
    <h2>Contact List</h2>
    <ul>
      <% @contacts.each do |c| %>
        <li><%= link_to c.name, c %> <%= link_to "X", c, :method => :delete %></li>
      <% end %>
    </ul>
    <%= link_to '+', new_contact_path, :class => 'btn btn-default btn-add-contact' %>
  </div>
</div>

  <footer>
  <hr>
    ©
  </footer>


