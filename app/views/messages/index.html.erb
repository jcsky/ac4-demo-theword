<div class="container">

  <div class="col-md-3 todolist">
    <!-- <h2>To Do List</h2> -->
    <!-- <textarea name="todolist">todolist</textarea> -->
  </div>

  <div class="col-md-6">
    <div class="mge-txt-area">
      <%= form_for @message, :url => messages_path do |m| %>
        <h2><%= m.label :content, 'Leave Your Message' %></h2>
        <!-- 寬度不應該寫死 -->
        Receiver:
        <%= m.text_area :user_id, size: '74x2' %>
        <%= m.text_area :content, size: '74x8' %>
        <div class="pull-right">
          <%= m.submit "Submit", :class => 'btn btn-primary' %>
          <%= link_to "Cancle", Message, :class => 'btn btn-danger' %>
        </div>
      <% end %>
    </div>

<% if false %>
    <div class="form-group">
      <%= m.label :pic, "Upload File" %>
      <%= m.file_field :pic %>
      <%= check_box_tag "destroy_file", "1" %> 刪除檔案
    </div>
<% end %>


      <% @messages.each do |m| %>
      <div class="mge-show mge-<%= m.id %>">
        <div class="pull-right">
          <%= link_to 'Edit', edit_message_url(m) %>
          <%#= link_to 'X', message_path(message), :data =>{:confirm => "r u sure?"}, :method => :delete %>
          <%= link_to 'X', message_path(m), :method => :delete %>
          <%= m.created_at.to_s(:short) %>
        </div>
        <%=simple_format m.content %>
      </div>

      <% end %>

  </div>



  <div class="col-md-3 contact-list">
    <h2>Contact List</h2>
    <ul>
      <% @contacts.each do |c| %>
        <li><%= link_to c.name, c %> <%= link_to "X", c, :method => :delete %></li>
      <% end %>
    </ul>
    <%= link_to '+', new_contact_path, :class => 'btn btn-default btn-add-contact' %>
  </div>
</div>

